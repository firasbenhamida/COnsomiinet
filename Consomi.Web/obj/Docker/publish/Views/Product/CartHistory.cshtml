@model IEnumerable<Consomi.Domain.Entities.Cart>

@{
    ViewBag.Title = "Cart History";

}
<style>
    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }


    #add-marge-product {
        margin-bottom: 25px;


    }

    #regroupment
        {
        border-top: 2px solid #3399CC;
        border-bottom: 2px solid #3399CC;
    border-left: 2px solid #3399CC;
    border-right: 2px solid #3399CC;

}
    
</style>
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><a href="index.html"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</a></li>
            <li class="active">Cart History</li>
        </ol>
    </div>
</div>


<h2>Cart History</h2>

@if (Model == null)
            {
    <h1> You did not buy any product </h1>
}
else
{
   
        foreach (var itemCart in Model)
        {
            <div class="top-brands">
                <div class="container" id="regroupment">
                  
                        
                            <h3> you have confirmed payment for this Cart on <span style="color: #3399CC"> @itemCart.dateAchat.ToString("dd MMM yyyy") </span> which contains the products below and you paid <span style="color: #3399CC"> @itemCart.prixTotal € </span>  </h3>

                       
                        <div class="agile_top_brands_grids">
                            @foreach (var item in itemCart.CartLines)
                    {
                                <div id="add-marge-product" class="col-md-3 top_brand_left">
                                    <div class="hover14 column">
                                        <div class="agile_top_brand_left_grid">
                                            <div class="agile_top_brand_left_grid_pos">
                                                <img src="images/offer.png" alt=" " class="img-responsive" />
                                            </div>
                                            <div class="agile_top_brand_left_grid1">

                                                <div class="snipcart-item block">
                                                    <div class="snipcart-thumb">
                                                        <p>@Html.DisplayFor(modelItem => item.myProduct.nom)</p>
                                                        <div class="ban-top">

                                                            @{
                                                                var base64 = Convert.ToBase64String(item.myProduct.imageByte);
                                                                var imgsrc = string.Format("data:image/gif;base64,{0}", base64);

                                                            }

                                                            <img class="center" src="@imgsrc" widht="274" height="320" />
                                                        </div>
                                                       
                                                        <p> quantity choosed : <b>@Html.DisplayFor(modelItem => item.quantiteChoisie) </b></p>
                                                        <p> product price : <b>@Html.DisplayFor(modelItem => item.prixDuProduit) </b>  </p>
                                                        <p> total price  :  <b>@Html.DisplayFor(modelItem => item.prixTotal)</b></p>

                                                    </div>
                                            
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                                                } @*Second for*@


                                                            </div>
                                                        </div>
                                                    </div>

                                              



                                                
                                                    } @*first for*@





                                           


                                                                } @*else end*@




<br />

















